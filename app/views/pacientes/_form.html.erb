<%= form_with(model: paciente) do |form| %>
  <% if paciente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>

      <ul>
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :nascimento, style: "display: block" %>
    <%= form.date_field :nascimento %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <%= form.fields_for :endereco do |fend| %>
    <div>
      <%= fend.label :logradouro, style: "display: block" %>>
      <%= fend.text_field :logradouro %>
    </div>

    <div>
      <%= fend.label :bairro, style: "display: block" %>>
      <%= fend.text_field :bairro %>
    </div>

    <div>
      <%= fend.label :cidade, style: "display: block" %>>
      <%= fend.text_field :cidade %>
    </div>

    <div>
      <%= fend.label :cep, style: "display: block" %>>
      <%= fend.text_field :cep %>
    </div>

    <div>
      <%= fend.label :complemento, style: "display: block" %>>
      <%= fend.text_field :complemento %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>

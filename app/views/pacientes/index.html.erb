<p style="color: green"><%= notice %></p>

<h1 style="margin-left: 1rem">Pacientes</h1>
<span class="button" style="display: table; margin: 0 auto; margin-bottom: 5px;">
  <%= link_to "Cadastrar paciente", new_paciente_path %>
</span>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Cpf</th>
    <th>Data de nascimento</th>
    <th>Endereço</th>
    <th>Ações</th>
  </tr>
    <% @pacientes.each do |paciente| %>
    <tr>
      <td>
        <%= paciente.nome %>
      </td>
      <td>
        <%= paciente.email %>
      </td>
      <td>
        <%= paciente.cpf %>
      </td>
      <td>
        <%= paciente.nascimento.strftime("%d/%m/%Y") %>
      </td>
      <td>
        <%= paciente.endereco.logradouro %>, <%= paciente.endereco.bairro %>, <%= paciente.endereco.cidade %>
      </td>
      <td>
        <span class="button">
          <%= link_to "Exibir este paciente", paciente %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
